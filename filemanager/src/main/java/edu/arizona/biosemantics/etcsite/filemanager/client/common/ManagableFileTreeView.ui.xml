<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:up="urn:import:gwtupload.client"
	xmlns:my="urn:import:edu.arizona.biosemantics.etcsite.filemanager.client.common">
	<ui:style>
		.uploader {

		}
		.leftMargin {
  		 	margin-left: 5px;
		}
		/*.paddedHorizontalPanel .gwt-Button {
    		margin-left: 20px;
		}*/
		.padding{
			padding-top: 10px;
			padding-bottom: 10px;
		}
					
		.middle{
			vertical-align: middle;

		}
	</ui:style>
	<g:VerticalPanel styleName="{style.padding}">
	   <!--  <my:IFileTreeView ui:field="fileTreeView"></my:IFileTreeView>  -->
	    <g:HorizontalPanel styleName="{style.padding}">
		     <g:Button ui:field="createButton" styleName="{style.middle}"  title="Select a parent folder before adding a folder">Add Folder</g:Button>
		       <g:FlowPanel styleName="{style.leftMargin}">
		       <g:ListBox visibleItemCount="1" ui:field="formatListBox"/>
		     </g:FlowPanel>
		     <g:FlowPanel styleName="{style.leftMargin}">
	        <!-- set avoidRepeatFiles to false before we can implement error messages for attempting upload the same files into different folders. Setting 
	        this attribute only have session-wise effect, repeated files can still upload in a new session.-->
		     <up:SingleUploader 
	           	ui:field="uploader"
	           	styleName="{style.uploader}"
	           	type="BUTTON"
	           	autoSubmit="true"
	           	avoidRepeatFiles="false"
	           	
	           	/> <!-- validExtensions="xml" -->
		     <g:Button ui:field="addButton" styleName="{style.middle}" title="Select a parent folder before uploading one or more files">Upload Files</g:Button>
		     </g:FlowPanel>
		   
		     <g:FlowPanel styleName="{style.leftMargin}">
		      <g:Button ui:field="renameButton" styleName="{style.middle}" title="rename a file or a folder">Rename</g:Button>
		      </g:FlowPanel>
		      <g:FlowPanel styleName="{style.leftMargin}">
		     <g:Button ui:field="deleteButton" styleName="{style.middle}" title="delete a file or a folder">Delete</g:Button>
		     </g:FlowPanel>
		     <g:FlowPanel styleName="{style.leftMargin}">
		    <g:Button ui:field="downloadButton" styleName="{style.middle}" title="download a file or a folder">Download</g:Button>
		    </g:FlowPanel>
		     <g:FlowPanel styleName="{style.leftMargin}">
		    <g:Label>|</g:Label>
		    </g:FlowPanel>
		     <g:FlowPanel styleName="{style.leftMargin}">
		  <g:Button ui:field="createSemanticMarkupInputButton" styleName="{style.middle}" title="select a parent folder before creating files for the Text Capture tool">Create Input for Text Capture</g:Button>
		    </g:FlowPanel>
		</g:HorizontalPanel>
		<g:InlineLabel>&nbsp;</g:InlineLabel>
		<!--<g:HTMLPanel styleName="{style.padding}">
			<hr style="width:100%;" />
    	</g:HTMLPanel>
    	  <g:HorizontalPanel>
			<g:InlineLabel>Want to create valid input files for the Text Capture tool?</g:InlineLabel>
			<g:HorizontalPanel styleName="{style.leftMargin}">
			<g:Button ui:field="createSemanticMarkupInputButton" title="select a parent folder before creating files for the Text Capture tool">Create Files</g:Button>
			</g:HorizontalPanel>
	    </g:HorizontalPanel>
	    -->
	     <my:IFileTreeView ui:field="fileTreeView"></my:IFileTreeView>
	    <g:SimplePanel addStyleNames="GWTUpld" ui:field="statusWidgetContainer"></g:SimplePanel>
	</g:VerticalPanel>
</ui:UiBinder>