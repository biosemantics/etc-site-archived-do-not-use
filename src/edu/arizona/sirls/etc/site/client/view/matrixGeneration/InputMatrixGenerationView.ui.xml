<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:edu.arizona.sirls.etc.site.client.view">
	<ui:style>
	</ui:style>	
	<g:HTMLPanel>
		<div class='content900pxCentered'>
		    <div id='matrixGenerationContent'>
				<g:VerticalPanel>
					<g:Label styleName="siteHeading">Matrix Generation</g:Label>
					<g:HorizontalPanel styleName="submenu" ui:field="submenuPanel" />
					<g:VerticalPanel styleName="contentPanel">
					    <g:FlowPanel>
					        <g:InlineLabel>
					            Please provide us with a folder that contains the input marked up taxon descriptions. You can upload the input using the&nbsp;
					        </g:InlineLabel>
					        <g:Anchor ui:field="fileManagerAnchor">File Manager</g:Anchor>
					        <g:InlineLabel>
					            . See our
					        </g:InlineLabel>
					        <g:Anchor href="https://raw.github.com/biosemantics/schemas/master/iplantOutputTreatment.xsd">&nbsp;format requirements</g:Anchor>
					        <g:InlineLabel>
					            &nbsp;for marked up taxon descriptions.
					        </g:InlineLabel>
					    </g:FlowPanel>
					    <g:HorizontalPanel styleName="inputForm">
					    	<g:cell verticalAlignment="ALIGN_MIDDLE">
					        	<g:Label>Task name:</g:Label>
					        </g:cell>
					        <g:cell verticalAlignment="ALIGN_MIDDLE">
					        	<g:TextBox ui:field="taskNameTextBox"></g:TextBox>
					        	</g:cell>
					    </g:HorizontalPanel>
					    <g:HorizontalPanel>
					        <g:Button ui:field="inputButton">Select Input</g:Button>
					        <g:Label ui:field="inputLabel"></g:Label>
					    </g:HorizontalPanel>
					    <g:Button ui:field="nextButton">Next</g:Button>
						<!--  <g:Button styleName="{style.important}" ui:field="button" /> -->
					</g:VerticalPanel>
				</g:VerticalPanel>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>