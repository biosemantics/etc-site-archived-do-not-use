<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:lay="urn:import:edu.arizona.biosemantics.etcsite.client.layout">
	<ui:style>
		.padding{
			padding-top: 10px;
			padding-bottom: 10px;
		}
		.important{
			font-weight:bold;
		}
		.header{
	        padding-top:15px;
			font-size: 24px;
			font-weight: bold;
			color: #339900;
		}
	</ui:style>
	<g:ScrollPanel>
	<lay:CenteredContentPanel>
		<g:VerticalPanel>
		    <g:Label styleName="{style.header}">ETC Toolkit Development News</g:Label>
		    
		    <g:VerticalPanel styleName="{style.padding}">
		       <g:InlineLabel>The development updates of the ETC toolkit are shown below. </g:InlineLabel>
		    	<g:FlowPanel><g:InlineLabel>Feature requests, bug reports,  and usability issue reports are accepted at&nbsp;</g:InlineLabel>
		    		<g:Anchor href="https://github.com/biosemantics/etc-site/issues?state=open" target="_blank">&nbsp;the ETC GitHub issue tracker</g:Anchor>
		    		<g:InlineLabel>.</g:InlineLabel>
		       </g:FlowPanel>
		    </g:VerticalPanel>
		    
		    <g:HTML styleName="{style.padding}" ui:field="html">
		    </g:HTML>
		    
		</g:VerticalPanel>
	</lay:CenteredContentPanel>
	</g:ScrollPanel>
</ui:UiBinder> 